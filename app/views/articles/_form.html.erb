<div class="container-fluid">
  <div class="col-md-10 col-lg-10 col-center-block content-wrap">
    <%= simple_form_for @article, remote: false do |f| %>
      <div class="form-group">
        <div class="row">
          <div class="col-md-3">
            <%= f.input :category_id, label: false, class: "form-control", prompt: "请选择", collection: Category.all %>
          </div>
          <div class="col-md-9">
            <%= f.input_field :title, label: false, class: "form-control", placeholder: "在这里输入标题"  %>
          </div>
        </div>
      </div>

      <div class="form-group">
        <ul class="nav nav-tabs" id="edit-tabs">
          <%= content_tag :li, link_to("编辑", '#edit_content', class: "edit-body-node edit-node", 'data-toggle': 'tab'), class: 'active' %>
          <%= content_tag :li, link_to("预览", '#preview_content', class: "eidt-body-node preview-node", 'data-toggle': 'tab') %>
        </ul>
      </div>
      <div class="form-group", id="edit-form">
        <%= f.input :content, as: :text, label: false, input_html: { rows: 15, class: "form-control"} %>
      </div>
      <div class="form-group", id="preview-form"></div>

      <div class="form-froup pull-right">
        <%= f.button :submit, "保存", class: 'btn btn-primary' %>
      </div>

    <% end %>
  </div>
</div>
